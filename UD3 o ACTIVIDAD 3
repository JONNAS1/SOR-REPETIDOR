#UO Unidad organizativa
#Creación de la unidad organizativa nombrada departamento:
New-ADOrganizationalUnit -Name "empresa" -Path "DC=JMG,DC=LOCAL" -Description "descripcion"

#Creación de una nueva unidad organizativa (VENTAS) dentro de la unidad organizativa llamada empresa:
New-ADOrganizationalUnit -Name "VENTAS" -Path "DC=empresa,DC=empresa,DC=LOCAL" -Description "Departamento de ventas"

#Creación de una nueva unidad organizativa (COMPRAS) dentro de la unidad organizativa llamada empresa:
New-ADOrganizationalUnit -Name "COMPRAS" -Path "DC=empresa,DC=empresa,DC=LOCAL" -Description "Departamento de compras"

#Creación de una nueva unidad organizativa (CONTABILIDAD) dentro de la unidad organizativa llamada empresa:
New-ADOrganizationalUnit -Name "CONTABILIDAD" -Path "DC=empresa,DC=empresa,DC=LOCAL" -Description "Departamento de contabilidad"

#Usuario
#Creación de los usuario 
New-ADUser -Name “Angela Banuls” -Path “CN=Users,DC=EMPRESA,DC=LOCAL”
-SamAccountName “angelab” -UserPrincipalName “angelab@EMPRESA.LOCAL”
-AccountPassword (ConvertTo-SecureString “aso2019.”-AsPlainText -Force)
-GivenName “Angela” -Surname “Banuls Serrano” -ChangePasswordAtLogon $true
-Enabled $true
